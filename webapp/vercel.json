{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "250mb",
        "runtime": "python3.9",
        "buildCommand": "gdown '15dEeF3H5uJSPvyod44wLH9ZRKJdrV5Oc' -O data.tar.gz && tar -xzf data.tar.gz -C ../"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "static/$1"
    }
  ],
  "env": {
    "VERCEL_PYTHON_INSTALL_COMMAND": "pip install uv gdown && uv sync --system --python python3.9"
  }
}